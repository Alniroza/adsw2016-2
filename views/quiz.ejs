<%- include layouts/admin_header.ejs %>
		<h1>QUIZ REGISTERED IN SYSTEM</h1>
		 
            <table class="table">
                <tr>
                    <th width="50px">No</th>
                    <th>Name</th>
                    <th>URL</th>
                    <th>EDIT</th>
                </tr>
                               
                <% if(data.length){ 
                                
                 for(var i = 0;i < data.length;i++) { %>
                 
                <tr>
                    <td><%=(i+1)%></td>
                    <td><%=data[i].name%></td>
                    <td><%=data[i].link%></td>
                    <td><a class="btn btn-danger btn-xs a-inside delete" href="../quiz/delete/<%=data[i].name%>">Delete</a></td>

            <% }
             }else{ %>
                 <tr>
                    <td colspan="3">No quizes registered.</td>
                 </tr>
            <% } %>
            	<tr>
                	<th>
                		<a href="../quiz/add" class="btn btn-primary"><span class="fa fa-clipboard"></span> + Add</a>
                	</th>
                </tr>
                              
            </table>
        
