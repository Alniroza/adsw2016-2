<%- include layouts/admin_header.ejs %>

           <a href="/contact/add" class="btn btn-default"><span class="fa fa-user"></span> + Add</a>
         <div>
            <table class="table" border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>
                    <th>Name</th>
                    <th>Last Name</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Action</th>
                </tr>
                               
                <% if(data.length){ 
                                
                 for(var i = 0;i < data.length;i++) { %>
                 
                <tr>
                    <td><%=(i+1)%></td>
                    <td><%=data[i].name%></td>
                    <td><%=data[i].last_name%></td>
                    <td><%=data[i].username%></td>
                    <td><%=data[i].password%></td>
                    <td>
                        <a class="btn btn-warning btn-xs a-inside edit" href="../contact/edit/<%=data[i].username%>">Edit</a>
                       
                        <a class="btn btn-danger btn-xs a-inside delete" href="../contact/delete/<%=data[i].username%>">Delete</a>
                       
                    </td>
                </tr>
            <% }
            
             }else{ %>
                 <tr>
                    <td colspan="3">No contacts to call</td>
                 </tr>
            <% } %>
                
                              
                
            </table>
         </div>
        
<%- include layouts/footer.ejs %>